@model Customer
@{
    ViewBag.Title = "Customers";
    Layout = "_Layout";
}

<h2 class="">@Model.Name</h2>
<ul>
    <li>
        Membership Type: 
        @Model.MembershipType.Name
    </li>
    @if (Model.Birthday.HasValue)
    {
        <li>
            Birthday: 
            @Model.Birthday.Value.ToShortDateString()
        </li>
    }
</ul>
